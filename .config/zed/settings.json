{
  "use_system_window_tabs": true,
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all"
  },
  "ui_font_family": ".ZedMono",
  "buffer_font_features": {
    "liga": false,
    "calt": false
  },
  "auto_install_extensions": {
    "biome": true,
    "emmet": true,
    "rainbow-csv": true,
    "codebook": true
  },
  "file_types": {
    "Shell Script": [".env.local", ".env.development"],
    "JSON": ["site.webmanifest"]
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    }
  }
}
