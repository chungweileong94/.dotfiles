{
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all"
  },
  "ui_font_family": ".ZedMono",
  "buffer_font_features": {
    "liga": false,
    "calt": false
  },
  "git_panel": {
    "tree_view": true
  },
  "file_types": {
    "JSON": ["site.webmanifest"],
    "JSONC": [".oxlintrc.json"]
  },
  "auto_install_extensions": {
    "biome": true,
    "tsgo": true,
    "oxc": true,
    "emmet": true,
    "rainbow-csv": true,
    "codebook": true
  },
  "languages": {
    "TypeScript": {
      "language_servers": [
        "tsgo",
        "!vtsls",
        "!typescript-language-server",
        "biome",
        "oxlint",
        "oxfmt",
        "!eslint",
        "..."
      ]
    },
    "JavaScript": {
      "language_servers": [
        "tsgo",
        "!vtsls",
        "!typescript-language-server",
        "biome",
        "oxlint",
        "oxfmt",
        "!eslint",
        "..."
      ]
    },
    "TSX": {
      "language_servers": [
        "tsgo",
        "!vtsls",
        "!typescript-language-server",
        "biome",
        "oxlint",
        "oxfmt",
        "!eslint",
        "..."
      ]
    },
    "CSS": {
      "language_servers": ["tailwindcss-intellisense-css", "!vscode-css-language-server"]
    },
  },
  "lsp": {
    "biome": {
      "settings": {
         "require_config_file": true
      }
    }
  }
}
